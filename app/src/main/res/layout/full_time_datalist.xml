<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/part_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/part_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/part_img"
        android:text="hello"
        android:textColor="@color/darkBlue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/part_text_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part_text_title"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/part_img"
        android:text="hello"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/job_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part_text_sub_title"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/part_img"
        android:text="hello"
        android:textColor="@color/lighter" />

    <Button
        android:id="@+id/part_btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/job_timing"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/part_img"
        android:background="@drawable/apply_button"
        android:textColor="@color/darkBlue" />
    <ImageView
        android:id="@+id/dot_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/slide_title"
        />
</RelativeLayout>